<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin_card_view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_height_in_card_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleNewsTextView"
                android:layout_width="0dp"
                android:layout_height="@dimen/linear_layout_height_in_card_view"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:maxHeight="@dimen/linear_layout_height_in_card_view"
                android:maxLines="3"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <ImageView
                android:src="@drawable/img_news_beetrack"
                android:scaleType="fitXY"
                android:id="@+id/photoImageView"
                android:layout_width="@dimen/photo_image_view_in_card_view"
                android:layout_height="@dimen/photo_image_view_in_card_view" />
        </LinearLayout>

        <TextView
            android:id="@+id/nameJournalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="35"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>